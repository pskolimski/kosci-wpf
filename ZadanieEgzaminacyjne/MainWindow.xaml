<Window x:Class="ZadanieEgzaminacyjne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieEgzaminacyjne"
        mc:Ignorable="d"
        Title="Gra w kości - Patryk Skolimowski" Height="275" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="Goldenrod">
            <Label Content="GRA W KOŚCI" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="15" />
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0, 15">
                <Label Content="TWÓJ NICK" HorizontalAlignment="Center" FontSize="15" FontWeight="Medium" />
                <TextBox Width="250" Margin="0, 5" Padding="3, 5" Name="NickName" TextAlignment="Center" Background="WhiteSmoke" />
            </StackPanel>
            <Button  Margin="0, 15, 0, 0" Click="StartGameButton" Style="{StaticResource ButtonStyle}">ROZPOCZNIJ GRĘ</Button>
        </StackPanel>
    </Grid>
</Window>
