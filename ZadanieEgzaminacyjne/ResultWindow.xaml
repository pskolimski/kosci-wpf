<Window x:Class="ZadanieEgzaminacyjne.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZadanieEgzaminacyjne"
        mc:Ignorable="d"
        Title="Gra w kości - wynik gry" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="Goldenrod">
            <Label Content="WYNIKI GRY" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="15" />
        </StackPanel>

        <ListView Grid.Row="1" x:Name="ResultsView" />
        <Button Grid.Row="2" Content="ZAGRAJ PONOWNIE" Style="{StaticResource ButtonStyle}" Click="PlayAgainButtonClick"/>
    </Grid>
</Window>
